@model YummyMummy.Models.Recipe

@{
    ViewBag.Title = @ViewBag.RecipeName;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.RecipeName</title>
</head>
<body>
    <h2>
    Recipe Summary: &nbsp; &nbsp; <a asp-action="Update" class="btn btn-sm btn-warning" asp-route-id="@Model.ID">Update</a> &nbsp;
    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@Model.ID"> Delete </a>
    </h2>
    <hr />
    @if (TempData["message"] != null)
    {
        <div class="text-center alert-success">@TempData["message"]</div>
    }
    @Html.Partial("~/Views/Shared/_PartialRecipeDetails.cshtml", Model)

</body>
</html>
